<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <title>Práctica de Multiplicación</title>
</head>
<body class="container">

    <%- include('partials/header.ejs') %>
    <%- include('partials/nav.ejs') %>

    <div class="container">
        <h2 class="text-center mt-4">Práctica de Multiplicación</h2>
        <p class="text-center">Tabla del número: <%= numero %></p>
    </div>

    <% if (numero) { %>
        <section>
            <table class="table table-bordered mt-4 mx-auto" style="width: 50%;">
                <thead>
                    <tr>
                        <th>Operación</th>
                        <th>Resultado</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 1; i <= 10; i++) { %>
                        <tr>
                            <td><%= numero %> x <%= i %></td>
                            <td><%= numero * i %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </section>
    <% } %>

    <section class="mt-4">
        <form action="p01" method="post" class="mx-auto" style="width: 300px;">
            <label for="numero" class="form-label">Número</label>
            <input type="text" name="numero" id="numero" class="form-control mb-3" placeholder="Escribe un número" required>
            <button type="submit" class="btn btn-primary">Enviar</button>
            <a href="/p01" class="btn btn-secondary">Limpiar</a>
        </form>
    </section>

    <%- include('partials/footer.ejs') %>
</body>
</html>
