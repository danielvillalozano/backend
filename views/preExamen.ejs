<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <title>Productos</title>
</head>
<body class="bg-light">

    <%- include('partials/header.ejs') %>
    <%- include('partials/nav.ejs') %>

    <div class="container py-4">
        <h3 class="text-center">Filtrar Productos por Tipo</h3>

        <section class="my-4">
            <form action="/papeleria" method="post" class="p-3 border rounded bg-white mx-auto" style="max-width: 400px;">
                <div class="mb-3">
                    <label for="tipo" class="form-label">Filtrar por Tipo:</label>
                    <select name="tipo" id="tipo" class="form-select">
                        <option value="1" <%= tipo == 1 ? 'selected' : '' %>>Tipo 1</option>
                        <option value="2" <%= tipo == 2 ? 'selected' : '' %>>Tipo 2</option>
                        <option value="3" <%= tipo == 3 ? 'selected' : '' %>>Tipo 3</option>
                    </select>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a href="/papeleria" class="btn btn-secondary">Limpiar</a>
                </div>
            </form>
        </section>

        <section>
            <h2 class="text-center my-4">Productos</h2>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Producto</th>
                        <th>Costo</th>
                        <th>Costo Venta</th>
                        <th>Cantidad</th>
                        <th>Tipo</th>
                    </tr>
                </thead>
                <tbody>
                    <% let totalCosto = 0, totalVenta = 0, totalCantidad = 0; %>
                    <% productos.forEach(producto => { %>
                        <% let costoVenta = producto.costo * 1.15; %>
                        <% totalCosto += producto.costo * producto.cantidad; %>
                        <% totalVenta += costoVenta * producto.cantidad; %>
                        <% totalCantidad += producto.cantidad; %>
                        <tr>
                            <td><%= producto.id %></td>
                            <td><%= producto.producto %></td>
                            <td>$<%= producto.costo.toFixed(2) %></td>
                            <td>$<%= costoVenta.toFixed(2) %></td>
                            <td><%= producto.cantidad %></td>
